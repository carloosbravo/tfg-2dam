<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:elevation="30dp"
        app:cardCornerRadius="10dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/nombrePracticasTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Nombre Practicas"
                    android:textSize="27dp"
                    android:textStyle="bold"
                    android:layout_marginRight="65dp"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:text="Disponible"
                    android:textStyle="bold"

                    android:textColor="#9ef01a"
                    android:layout_marginTop="7dp"
                    />

            </LinearLayout>



            <TextView
                android:id="@+id/nombreCentroTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nombreEmpresa"
                android:textSize="18dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginBottom="5dp" />
            <View
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:background="@color/grisOscuro" />

            <TextView
                android:id="@+id/descripcionPracticaTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se busca desarrollador junior para java , empresa "
                android:textStyle=""
                android:textColor="@color/grisMasOscuro"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>