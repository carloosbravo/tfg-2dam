<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:background="@color/azulProfile"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="5dp"
                app:strokeColor="@android:color/darker_gray"
                app:shapeAppearanceOverlay="@style/circleImageView"
                android:src="@drawable/foto_prueba"
                />

            <TextView
                android:id="@+id/nombreALumnoTituloTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:text="Gonzalo Rojas"
                android:textStyle="bold"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="IFP innovcaion en Formacion profesional"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                android:textSize="15dp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/FilaInformacionNombre"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ic_badget"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/azulProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NOMBRE"

                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/nombreALumnoTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gonzalo Rojas"
                    android:textStyle="italic"
                    android:textColor="@color/azulProfile"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="350sp"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/grisMasOscuro"
            android:layout_marginLeft="32sp"/>

        <LinearLayout
            android:id="@+id/FilaInformacionTelefono"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp" >

            <ImageView
                android:id="@+id/iconoTelefono"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ic_phone"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NÂº TELEFONO"
                    android:textColor="@color/azulProfile"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/telefonoTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+34 56374362"
                    android:textColor="@color/azulProfile"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="350sp"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/grisMasOscuro"
            android:layout_marginLeft="32sp"/>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp" >

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ic_email_blue"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CORREO"
                    android:textStyle="bold"
                    android:textColor="@color/azulProfile"/>

                <TextView
                    android:id="@+id/emailTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="gonzrf@gmail.com"
                    android:textColor="@color/azulProfile"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="350sp"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/grisMasOscuro"
            android:layout_marginLeft="32sp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_cv"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CV"
                    android:textColor="@color/azulProfile"
                    android:textStyle="bold"/>


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="350sp"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/grisMasOscuro"
            android:layout_marginLeft="32sp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>